<?xml version="1.0" encoding="UTF-8"?>
<component name="SearchPage" extends="Group" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://devtools.web.roku.com/schema/RokuSceneGraph.xsd">

	<script type="text/brightscript" uri="pkg:/components/SearchPage.brs" />
	
	<children>
		<PanelSet id="panelSet"
			visible="true"
			slidingStatus="true">
			<Panel id="keyboardPanel" 
				panelSize="narrow">
				<MiniKeyboard 
					id="miniKeyboard"
					visible="true"
				/>
			</Panel>
			<Panel id="resultPanel"
				panelSize="wide">
				<Label
					id="resultLabel"
					text="Type for search"
					horizAlign="center"
					vertAlign="center"
				/>
				<RowList
		            id="selectionRow"
		            rowLabelColor="0x333333"
		            showRowCounter="[false]"
		            translation="[0,50]"
		            showRowLabel="[true, true]"
		        />
			</Panel>
		</PanelSet>
		 
	</children>
</component>
